<%= form_tag missions_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<% if @missions.each do |mission| %>
  <table class="tb-missions">
    <tr class="tr-head">
      <td>
        <%= mission.name %>
      </td>
    </tr>
    <tr class="tr-desc1">
      <td>
        <p><%= mission.monster %></p>
      </td>
      <td>
        <p>Weakness: <%= mission.monster_weakness %></p>
      </td>
    </tr>
    <tr class="tr-desc2">
      <td>Breakable drops:  <%= mission.drop_1 %>
                            <%= mission.drop_2 %>
      </td>
      <td>1: <%= mission.reward_1 %> <br />
          2: <%= mission.reward_2 %> <br />
          3: <%= mission.reward_3 %>
      </td>
    </tr>
</table>
    <%= link_to 'Show', mission %>
    <%= link_to 'Edit', edit_mission_path(mission) %>
    <%= link_to 'Destroy', mission, method: :delete, data: { confirm: 'Are you sure?' } %>
<p></p>
<% end.empty? %>
  <table>
    <tr>Try searching for an Offering.</tr>
  </table>
<% end %>
<br />
<% if signed_in? %>
  <h1>Admin Section!</h1>
  <p>
  <h2>Download:</h2>
  <%= link_to "CSV", missions_path(format: "csv") %>
  </p>

  <p>
  <h2>Import</h2>
    <%= form_tag import_missions_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import" %>
    <% end %>
  </p>
  <% end %>